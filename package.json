{
  "name": "fhevm-stats",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run index.ts",
    "backfill": "MODE=backfill bun run index.ts",
    "stream": "MODE=stream bun run index.ts",
    "both": "MODE=both bun run index.ts",
    "stats": "bun run scripts/stats.ts",
    "smoke": "bun run scripts/smoke.ts",
    "backfill:types": "bun run scripts/backfill-types.ts",
    "rollup:ops": "bun run scripts/rollup-ops.ts",
    "rollup:ops:all": "bun run scripts/rollup-ops-all.ts",
    "dfg:build": "bun run scripts/build-dfg.ts",
    "dfg:validate": "bun run scripts/validate-dfg.ts",
    "dfg:rollup": "bun run scripts/rollup-dfg.ts",
    "migrate": "bun run scripts/migrate.ts",
    "serve": "bun run src/server.ts",
    "share:ngrok": "scripts/share-ngrok.sh",
    "share:ngrok:live": "scripts/share-ngrok.sh --live",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false --assist-enabled=false .",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "precommit": "bun run check && bun test && (cd ui && bun run lint && bun run build)"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "viem": "^2.44.4"
  }
}
